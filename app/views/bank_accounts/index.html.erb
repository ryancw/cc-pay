<h1>Listing bank_accounts</h1>

<table>
  <tr>
    <th>Nickname</th>
    <th>Bankname</th>
    <th>Routing</th>
    <th>Checking</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bank_accounts.each do |bank_account| %>
  <tr>
    <td><%= bank_account.nickname %></td>
    <td><%= bank_account.bankname %></td>
    <td><%= bank_account.routing %></td>
    <td><%= bank_account.checking %></td>
    <td><%= link_to 'Show', bank_account %></td>
    <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
    <td><%= link_to 'Destroy', bank_account, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

