<% provide(:title, 'Home') %>
<div class="tab-content">
  <% if signed_in? %>
  <div class="alert alert-block">
  
  <h4>Important Messages</h4>
  <% if @past_items.any? %>
  <ol class="microposts">
    <%= render partial: 'shared/feed_item', collection: @past_items %>
  </ol>
  
<% end %>
</div>
<h1>November <%= Date.today.year %></h1> 
<table class="table table-striped">
    <thead>
    <tr>
      <th>Card Type</th>
      <th>Last 4 Digits</th>
      <th>Bill Due</th>
      <th>Amount Owed</th>
      <th>Pay Now</th>
    </tr>
    </thead>
    <tbody>
      <%= render partial: 'shared/paytable_item', collection: @past_items %>
    </tbody>

    </table>
  
  <% else %>
  <div class="row">
  <div class="span6">
    <h1>Welcome!</h1>
    <br />
    <h3> Returning? </h3>
    <br />
    <%= form_for(:session, :url => sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <div class="input-append">
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
    </div>
    <% end %>
</div>
<div class="span3">
    <p>New user? <%= link_to "Sign up now!", signup_path, :class => "btn btn-large btn-primary" %></p>
    </div>
</div>
<% end %>
</div>
 

  