<li id="<%= alert_item.id %>">
    <span class="content">
      <i class="icon-exclamation-sign"></i> <%= alert_item.alerttype %> - <%= alert_item.contact %>
     
     <div class="addnew">
  <% if current_user?(alert_item.user) %>
    <%= link_to '<i class="icon-trash"></i>'.html_safe, alert_item, method:  :delete,
                                     confirm: "You sure?",
                                     title:   alert_item.contact %>
    
  <% end %>
  </span>
</div>
</li>


